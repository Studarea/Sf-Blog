{% extends 'base.html.twig' %}


{% block title %}Les Articles{% endblock %}



{% block main %}

<main>


    <section>
    {# j'utilise la fonction Twig form pour afficher mon formulaire  #}
    {#  avec en parametre la variable de formulaire #}
    {#  le gabarit et les données du formulaire qui execute dans twig  #}

        <br />
        {{ form_start(formView) }}

        <div class=""><h1>Créer un nouvel Article</h1></div>

        <div class="form">


            {{ form_label(formView.title) }}
            {{ form_widget(formView.title, {'attr': {'class': 'margin'}}) }}
